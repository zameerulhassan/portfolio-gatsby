{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "blog"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "gatsby",
        "javascript",
        "jamstack",
        "coding",
        "html",
        "css",
        "react",
        "graphql",
        "redux",
        "generic",
        "business",
        "management",
        "databases"
      ],
      "required": true,
      "default": "generic"
    },
    "desc": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date"
    }
  }
}
